<% if @restaurant.errors.any? %>
  <div id="error-list">
    <h2>Errors</h2>
  <ul>
    <% @restaurant.errors.full_messages.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_for @restaurant do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :cuisine %>
  <%= f.text_field :cuisine, required: true %>

  <%= f.label :address %>
  <%= f.text_field :address, required: true %>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>

  <%= f.label :state %>
  <%= f.text_field :state, required: true %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, required: true %>

  <%= f.submit %>
<% end %>